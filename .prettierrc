{
  "singleQuote": false,
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": 'none',
  "printWidth": 120,
  "overrides": [
    {
      files: ['*.ts'],
      options: {
        parser: 'typescript',
        semi: true,
        singleQuote: true,
      },
    },
    {
      files: ['*.json'],
      options: {
        tabWidth: 4,
        semi: true,
        singleQuote: false,
      },
    }
  ]
}
